<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked (filled accent background): dark text for contrast -->
    <item android:state_checked="true" android:color="@color/bg_primary" />
    <!-- Unchecked (outlined): accent text -->
    <item android:color="@color/accent" />
</selector>
