<?xml version="1.0" encoding="utf-8"?>
<!--
    Three-column landscape layout for AAOS automotive_1024p_landscape (1024×600 dp):

      Left  (weight=1)  — buttons stack, vertically centered
      Center (weight=0) — logo ↑ board ↓ status, vertically centered
      Right  (weight=1) — score panel, vertically centered

    weight=1 on both outer columns ensures the board is horizontally centered
    and the score panel is equidistant from the board's right edge and the
    screen edge.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/bg_primary">

    <!-- ── Left column: mode toggle + action buttons ── -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!--
            All three buttons share layout_width="match_parent" inside a
            220dp wrapper so they render at identical widths.
        -->
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/toggle_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textOn="@string/mode_two_player"
                android:textOff="@string/mode_single_player"
                android:checked="true"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/toggle_text"
                android:background="@drawable/bg_toggle"
                android:minHeight="72dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_new_game"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/btn_new_game"
                android:textSize="16sp"
                android:textColor="@color/accent"
                android:minHeight="72dp"
                app:cornerRadius="36dp"
                app:strokeColor="@color/accent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_new_round"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/btn_new_round"
                android:textSize="16sp"
                android:textColor="@color/accent"
                android:minHeight="72dp"
                app:cornerRadius="36dp"
                app:strokeColor="@color/accent" />

        </LinearLayout>

    </LinearLayout>

    <!-- ── Center column: logo → board → status ── -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_lf"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="12dp" />

        <!-- 3×3 board — 155dp cells, 3dp margins, 4dp grid padding -->
        <GridLayout
            android:id="@+id/grid_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3"
            android:padding="4dp">

            <Button
                android:id="@+id/btn_cell_00"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="3dp"
                android:textSize="64sp"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_01"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="3dp"
                android:textSize="64sp"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_02"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="3dp"
                android:textSize="64sp"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_10"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="3dp"
                android:textSize="64sp"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_11"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="3dp"
                android:textSize="64sp"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_12"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="3dp"
                android:textSize="64sp"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_20"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="3dp"
                android:textSize="64sp"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_21"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="3dp"
                android:textSize="64sp"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_22"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="3dp"
                android:textSize="64sp"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

        </GridLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary"
            android:text="@string/status_initial"
            android:layout_marginTop="12dp" />

    </LinearLayout>

    <!-- ── Right column: score panel centered ── -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!--
            Score panel wrapper: wrap_content so the outer gravity="center"
            treats it as a single unit. Items inside are start-aligned so the
            "Score" title and the label column share the same left edge.
        -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_header"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <!--
                TableLayout auto-aligns all cells in the same column to the
                same width, giving the two-column scoreboard appearance:
                  label column   value column
                  X              0
                  O              0
                  Draws          0
            -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_label_x"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary"
                        android:paddingEnd="16dp" />

                    <TextView
                        android:id="@+id/tv_score_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary" />
                </TableRow>

                <TableRow android:layout_marginTop="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_label_o"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary"
                        android:paddingEnd="16dp" />

                    <TextView
                        android:id="@+id/tv_score_o"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary" />
                </TableRow>

                <TableRow android:layout_marginTop="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_label_draws"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary"
                        android:paddingEnd="16dp" />

                    <TextView
                        android:id="@+id/tv_score_draws"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
