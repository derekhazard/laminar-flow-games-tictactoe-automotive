<?xml version="1.0" encoding="utf-8"?>
<!--
    Three-column landscape layout for AAOS automotive_1024p_landscape (1024×600 dp):

      Left  (weight=1)  — buttons stack, vertically centered
      Center (weight=0) — title ↑ board ↓ status, vertically centered
      Right  (weight=1) — logo upper half, score panel lower half

    weight=1 on both outer columns ensures the board is horizontally centered
    and the score panel is equidistant from the board's right edge and the
    screen edge.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/bg_primary">

    <!-- ── Left column: mode toggle + action buttons ── -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!--
            All three buttons share layout_width="match_parent" inside a
            220dp wrapper so they render at identical widths.
        -->
        <LinearLayout
            android:layout_width="@dimen/button_wrapper_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ToggleButton
                android:id="@+id/toggle_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textOn="@string/mode_two_player"
                android:textOff="@string/mode_single_player"
                android:checked="false"
                android:textAppearance="@style/TextAppearance.Cockpit.Label"
                android:textColor="@color/toggle_text"
                android:background="@drawable/bg_toggle"
                android:minHeight="@dimen/touch_target_min_height" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_new_game"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_spacing"
                android:text="@string/btn_new_game"
                android:textSize="@dimen/text_size_body"
                android:textColor="@color/white"
                android:minHeight="@dimen/touch_target_min_height"
                app:cornerRadius="@dimen/button_corner_radius"
                app:strokeColor="@color/accent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_new_round"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_spacing"
                android:text="@string/btn_new_round"
                android:textSize="@dimen/text_size_body"
                android:textColor="@color/white"
                android:minHeight="@dimen/touch_target_min_height"
                app:cornerRadius="@dimen/button_corner_radius"
                app:strokeColor="@color/accent" />

        </LinearLayout>

    </LinearLayout>

    <!-- ── Center column: title → board → status ── -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_title"
            android:textAppearance="@style/TextAppearance.Cockpit.Label"
            android:textColor="@color/text_primary"
            android:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 3×3 board — 155dp cells, 3dp margins, 4dp grid padding -->
        <GridLayout
            android:id="@+id/grid_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3"
            android:padding="@dimen/grid_padding">

            <Button
                android:id="@+id/btn_cell_00"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="@dimen/cell_margin"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_01"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="@dimen/cell_margin"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_02"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="@dimen/cell_margin"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_10"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="@dimen/cell_margin"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_11"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="@dimen/cell_margin"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_12"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="@dimen/cell_margin"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_20"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="@dimen/cell_margin"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_21"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="@dimen/cell_margin"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

            <Button
                android:id="@+id/btn_cell_22"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="@dimen/cell_margin"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="bold"
                android:background="@drawable/bg_cell"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="@string/cell_empty_description" />

        </GridLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Cockpit.Label"
            android:textColor="@color/text_primary"
            android:text="@string/status_initial"
            android:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- ── Right column: logo top, score centred vertically at board row-1 ── -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/logo_margin_top">

            <ImageView
                android:layout_width="@dimen/logo_width"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_lf"
                android:contentDescription="@string/app_name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="start">

            <!--
                TableLayout auto-aligns all cells in the same column to the
                same width, giving the two-column scoreboard appearance:
                  Player         Wins
                  You / X        0
                  Android / O    0
                  Draws          0
            -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:id="@+id/tv_score_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_header_player"
                        android:textAppearance="@style/TextAppearance.Cockpit.Label"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:paddingEnd="@dimen/score_padding_end" />

                    <TextView
                        android:id="@+id/tv_score_header_wins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_header_wins"
                        android:textAppearance="@style/TextAppearance.Cockpit.Label"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/score_row_spacing">
                    <TextView
                        android:id="@+id/tv_label_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_label_x"
                        android:textAppearance="@style/TextAppearance.Cockpit.Label"
                        android:textColor="@color/player_x"
                        android:paddingEnd="@dimen/score_padding_end" />

                    <TextView
                        android:id="@+id/tv_score_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAppearance="@style/TextAppearance.Cockpit.Body"
                        android:textColor="@color/player_x" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/score_row_spacing">
                    <TextView
                        android:id="@+id/tv_label_o"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_label_o"
                        android:textAppearance="@style/TextAppearance.Cockpit.Label"
                        android:textColor="@color/player_o"
                        android:paddingEnd="@dimen/score_padding_end" />

                    <TextView
                        android:id="@+id/tv_score_o"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAppearance="@style/TextAppearance.Cockpit.Body"
                        android:textColor="@color/player_o" />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/score_row_spacing">
                    <TextView
                        android:id="@+id/tv_label_draws"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/score_label_draws"
                        android:textAppearance="@style/TextAppearance.Cockpit.Label"
                        android:textColor="@color/accent"
                        android:paddingEnd="@dimen/score_padding_end" />

                    <TextView
                        android:id="@+id/tv_score_draws"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAppearance="@style/TextAppearance.Cockpit.Body"
                        android:textColor="@color/accent" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
