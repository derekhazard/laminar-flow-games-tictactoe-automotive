<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="24dp">

    <!-- Info panel: title, turn status, new game -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginBottom="24dp"
            tools:text="Player X's Turn" />

        <RadioGroup
            android:id="@+id/rg_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rb_two_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_two_player"
                android:checked="true"
                android:minHeight="72dp"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rb_vs_cpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_vs_cpu"
                android:minHeight="72dp"
                android:textSize="18sp" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_new_game"
            android:textSize="18sp"
            android:minWidth="160dp"
            android:minHeight="72dp" />

    </LinearLayout>

    <!-- 3x3 game board â€” cells are 160dp each; total 480x480dp -->
    <GridLayout
        android:id="@+id/grid_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:rowCount="3"
        android:columnCount="3">

        <Button
            android:id="@+id/btn_cell_00"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="64sp"
            android:contentDescription="@string/cell_empty_description" />

        <Button
            android:id="@+id/btn_cell_01"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="64sp"
            android:contentDescription="@string/cell_empty_description" />

        <Button
            android:id="@+id/btn_cell_02"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="64sp"
            android:contentDescription="@string/cell_empty_description" />

        <Button
            android:id="@+id/btn_cell_10"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="64sp"
            android:contentDescription="@string/cell_empty_description" />

        <Button
            android:id="@+id/btn_cell_11"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="64sp"
            android:contentDescription="@string/cell_empty_description" />

        <Button
            android:id="@+id/btn_cell_12"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="64sp"
            android:contentDescription="@string/cell_empty_description" />

        <Button
            android:id="@+id/btn_cell_20"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="64sp"
            android:contentDescription="@string/cell_empty_description" />

        <Button
            android:id="@+id/btn_cell_21"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="64sp"
            android:contentDescription="@string/cell_empty_description" />

        <Button
            android:id="@+id/btn_cell_22"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="64sp"
            android:contentDescription="@string/cell_empty_description" />

    </GridLayout>

</LinearLayout>
